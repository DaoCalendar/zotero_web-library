{
  "name": "zotero-web-library",
  "version": "0.10.2",
  "description": "Web library from zotero.org",
  "main": "src/js/zotero-web-library.js",
  "files": [
    ".babelrc.cjs",
    "src/js",
    "src/scss",
    "build"
  ],
  "config": {
    "port": "8001"
  },
  "browserslist": "last 2 versions, not <0.5%, not IE<12, maintained node versions",
  "scripts": {
    "serve": "node scripts/server.js -p $npm_package_config_port",
    "prepack": "run-s clean build",
    "postpack": "rimraf build",
    "prebuild": "npm run clean -s && mkdir -p build/static/",
    "clean": "rimraf build",
    "build": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:static -s' && npm run build:postprocess",
    "browserify": "mkdir -p build/static && NODE_ENV=production browserify -s ZoteroWebLibrary --extension=.jsx src/js/main.js -t [babelify] -g [ envify --NODE_ENV production ] -g uglifyify | terser --compress --mangle > build/static/zotero-web-library.js",
    "browserify-debug": "mkdir -p build/static && DEBUG=true NODE_ENV=production browserify -s ZoteroWebLibrary --extension=.jsx src/js/main.js -t [babelify] -g [ envify --NODE_ENV production ] -g uglifyify -o build/static/zotero-web-library.js",
    "build:js": "run-s browserify",
    "build:scss": "for f in src/scss/*.scss; do node-sass $f --output-style compressed --output build/static/; done;",
    "build:html": "mkdir -p build/ && rsync -vazL src/html/* build/",
    "build:styles-json": "node scripts/build-styles-json.js --stylesCacheTime $npm_package_config_styles_cache_time",
    "build:static": "mkdir -p build/static && rsync -vazL src/static/* build/static/",
    "build:postprocess": "postcss build/static/zotero-web-library.css --use autoprefixer --no-map -r",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:static -s'",
    "devel:js": "watchify -s ZoteroWebLibrary --extension=.jsx src/js/main.js -d -v -t [babelify] -p mapstraction -o build/static/zotero-web-library.js",
    "devel:scss": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run devbuild:scss'",
    "devel:html": "nodemon -q -w src/html -w config --ext '.' --exec 'npm run build:html'",
    "devel:static": "nodemon -q -w src/static --ext '.' --exec 'npm run build:static'",
    "devbuild:scss": "run-s devbuild:scss:build devbuild:scss:post",
    "devbuild:scss:build": "for f in src/scss/*.scss; do node-sass $f --recursive --source-map true --source-map-contents true --output build/static; done;",
    "devbuild:scss:post": "postcss build/static/*.css --use autoprefixer -r",
    "start": "run-p \"serve -s {@}\" \"devel -s {@}\"",
    "stylelint": "stylelint src/scss/**/*.scss || true",
    "eslint": "eslint \"src/js/**/*.+(js|jsx)\" || true",
    "lint": "run-p stylelint eslint",
    "watch:stylelint": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run stylelint'",
    "watch:eslint": "nodemon -q -w src/js --ext 'js,jsx' --exec 'npm run eslint'",
    "watch:lint": "run-p 'watch:stylelint -s' 'watch:eslint -s'",
    "test": "nyc mocha --require babel-core/register 'test/**/*.spec.js'"
  },
  "keywords": [
    "Zotero"
  ],
  "author": "Faolan C-P",
  "license": "AGPL-3.0",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "@trendmicro/react-dropdown": "^1.3.0",
    "bootstrap-sass": "^3.4.1",
    "classnames": "^2.2.6",
    "core-js": "^3.6.2",
    "deep-equal": "^2.0.1",
    "escape-html": "^1.0.3",
    "history": "^4.10.1",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-key-handler": "^1.1.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-select": "<2.0.0",
    "react-tinymce": "^0.7.0",
    "redux": "^4.0.5",
    "redux-async-queue": "^1.0.0",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "tinymce": "=4.9.4",
    "zotero-api-client": "^0.27.0",
    "zotero-api-client-cache": "^0.7.0",
    "zotero-base-mappings": "0.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.7.4",
    "@babel/plugin-proposal-function-sent": "^7.7.4",
    "@babel/plugin-proposal-json-strings": "^7.7.4",
    "@babel/plugin-proposal-numeric-separator": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/plugin-proposal-throw-expressions": "^7.7.4",
    "@babel/plugin-syntax-async-generators": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-syntax-import-meta": "^7.7.4",
    "@babel/plugin-transform-async-to-generator": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "envify": "^4.1.0",
    "enzyme": "^3.11.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.17.0",
    "fetch-mock": "^8.3.1",
    "mapstraction": "^1.0.1",
    "merge-stream": "^2.0.0",
    "mocha": "^7.0.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "postcss-cli": "^6.1.3",
    "react-test-renderer": "^16.12.0",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.0",
    "run-sequence": "^2.2.1",
    "serve-static": "^1.14.1",
    "sinon": "^8.0.4",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.13.0",
    "terser": "^4.6.1",
    "uglify-js": "^3.7.4",
    "uglifyify": "^5.0.2",
    "watchify": "^3.11.1"
  }
}
